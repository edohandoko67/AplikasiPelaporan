<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="@color/Color_6"
    app:cardElevation="12dp"
    app:cardCornerRadius="27dp">

    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_userDate"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Date          :"
            android:textSize="20sp"/>
        <TextView
            android:id="@+id/tv_date_user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Date"
            android:textSize="20sp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_laporanuser"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Laporan   :"
            android:textSize="20sp"/>
        <TextView
            android:id="@+id/tv_laporan_user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Laporan"
            android:textSize="20sp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_hasi_user"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Hasil        :"
            android:textSize="20sp"/>
        <TextView
            android:id="@+id/tv_hasilLap_user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hasil"
            android:textSize="20sp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_status_user"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Status      :"
            android:textSize="20sp"/>
        <TextView
            android:id="@+id/tv_statusLaporan_user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Status"
            android:textSize="20sp"/>
    </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>