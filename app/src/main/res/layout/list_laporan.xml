<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="@color/Color_6"
    android:layout_marginBottom="15dp"
    app:cardElevation="12dp"
    app:cardCornerRadius="27dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_user"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:text="Tanggal pelapor      :"
                android:textSize="20sp"/>
            <TextView
                android:id="@+id/tv_etdate_user"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tanggal pelapor"
                android:textSize="20sp"/>
        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_update"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:text="Tanggal dikerjakan :"
            android:textSize="20sp"/>
        <TextView
            android:id="@+id/tv_etdate_update"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tanggal dikerjakan"
            android:textSize="20sp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_userLap"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:text="Laporan                    :"
            android:textSize="20sp"/>
        <TextView
            android:id="@+id/tv_lp_user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Laporan"
            android:textSize="20sp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_userhasil"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:text="Hasil                          :"
            android:textSize="20sp"/>
        <TextView
            android:id="@+id/tv_hasil_user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hasil"
            android:textSize="20sp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_statusSaya"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:text="Status                       :"
            android:textSize="20sp"/>
        <TextView
            android:id="@+id/tv_status_user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Status"
            android:textSize="20sp"/>
    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/btn_update_user"
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:src="@drawable/baseline_edit_24"
                android:textAllCaps="false"
                android:layout_margin="20dp" />

            <ImageView
                android:id="@+id/btn_delete_user"
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:src="@drawable/baseline_delete_24"
                android:textAllCaps="false"/>
        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>